#compdef webdeploy

_webdeploy() {
    local -a commands
    commands=(
        '--setup:Initialize new server'
        '--setupproject:Initialize new project'
        '--deploy:Deploy project'
        '--listservers:List configured servers'
        '--status:Check Nginx status'
        '--ssl:Setup SSL with Certbot'
        '--logs:Tail Nginx error logs'
        '--restart:Reload Nginx'
        '--ssh:SSH into server'
        '--backup:Backup remote project'
        '--audit:Show deployment history'
        '--db-backup:Backup database'
        '--db-restore:Restore database'
        '--monitor:Monitor system (htop)'
        '--clear-cache:Clear caches'
        '--env-set:Set environment variable'
        '--env-get:Get environment variables'
        '--env-list:List environment variables'
        '--firewall-status:Check UFW status'
        '--firewall-allow:Allow port'
        '--firewall-deny:Deny port'
        '--cron-list:List cron jobs'
        '--cron-add:Add cron job'
        '--cron-remove:Remove cron job'
        '--user-add:Add system user'
        '--user-remove:Remove system user'
        '--disk-cleanup:Clean disk space'
        '--update-server:Update system packages'
        '--install-pkg:Install package'
        '--service-start:Start service'
        '--service-stop:Stop service'
        '--service-restart:Restart service'
        '--git-pull:Git pull'
        '--npm-install:Run npm install'
        '--pm2-list:List PM2 processes'
        '--pm2-restart:Restart PM2 process'
        '--pm2-logs:Tail PM2 logs'
        '--whoami:Show current user'
        '--info:Show system info'
        '--network:Show network info'
        '--docker-ps:List Docker containers'
        '--maintenance:Toggle maintenance mode'
        '--reboot:Reboot server'
        '--kernel:Show kernel info'
        '--fail2ban-install:Install Fail2Ban'
        '--fail2ban-status:Status of Fail2Ban'
        '--check-ports:Check open ports'
        '--access-logs:Tail Nginx access logs'
        '--journal-failed:Show failed systemd units'
        '--composer-install:Run composer install'
        '--composer-update:Run composer update'
        '--artisan-cmd:Run artisan command'
        '--pip-install:Run pip install'
        '--venv-create:Create Python venv'
        '--zip-remote:Zip folder remotely'
        '--unzip-remote:Unzip file remotely'
        '--mv:Move file remotely'
        '--cp:Copy file remotely'
        '--chown:Change owner remotely'
        '--chmod:Change permissions remotely'
        '--dig:DNS lookup'
        '--whois:Whois lookup'
        '--run-script:Run remote script'
        '--rollback:Rollback deployment'
        '--delete-project:Delete project'
        '--test-connection:Verify SSH connection'
        '--version:Show version'
        '--help:Show help'
    )
    _describe -t commands 'webdeploy commands' commands
}

_webdeploy "$@"
